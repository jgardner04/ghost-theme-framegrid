  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Underwater Photography Portfolio",
  "description": "Explore stunning underwater photography featuring aquatic life and underwater ecosystems captured beneath the surface",
  "url": "{{@site.url}}/portfolio/underwater/",
  "about": {
    "@type": "Thing",
    "name": "Underwater Photography",
    "description": "Specialized photography capturing marine life and underwater environments"
  },
  "specialty": "Underwater Photography"
