{{!< default}}

{{#contentFor "page_class"}}portfolio-underwater-page{{/contentFor}}
{{#contentFor "meta_title"}}{{meta_title default="Underwater Photography Portfolio"}}{{/contentFor}}
{{#contentFor "meta_description"}}{{meta_description default="Explore stunning underwater photography featuring aquatic life and underwater ecosystems captured beneath the surface"}}{{/contentFor}}

{{! Underwater portfolio page }}
<main class="portfolio-underwater" role="main">
  {{! Underwater hero section }}
  <section class="underwater-hero bg-gradient-to-br from-teal-900 via-cyan-800 to-blue-900 text-white py-20 lg:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-50"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <div class="flex justify-center mb-6">
          {{! Underwater icon }}
          <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center backdrop-blur-sm">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Underwater Photography
        </h1>

        <p class="max-w-3xl mx-auto text-lg md:text-xl text-cyan-100 mb-8">
          Dive into the mesmerizing world beneath the surface. Capturing the mysterious beauty of aquatic life
          and underwater ecosystems from coral reefs to kelp forests around the globe.
        </p>

        {{! Underwater-specific stats }}
        <div class="flex flex-wrap justify-center gap-8 text-sm text-cyan-200">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
            <span>Deep Sea Expeditions</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
            </svg>
            <span>Marine Conservation</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.01M15 10h1.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Macro & Wide Angle</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{! Navigation breadcrumb }}
  <nav class="breadcrumb bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 py-4" aria-label="Breadcrumb">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">Home</a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <a href="/portfolio/" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">Portfolio</a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-900 dark:text-white font-medium">Underwater</span>
        </li>
      </ol>
    </div>
  </nav>

  {{! Underwater collection filter and controls }}
  <section class="controls bg-cyan-50 dark:bg-gray-900 py-6">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
        {{! View controls }}
        <div class="view-controls" x-data="{ view: 'grid' }">
          <div class="flex items-center space-x-2">
            <button
              @click="view = 'grid'"
              :class="{ 'bg-cyan-600 text-white': view === 'grid', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': view !== 'grid' }"
              class="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-cyan-50 dark:hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-cyan-500"
              aria-label="Grid view"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 3h7v7H3V3zm0 11h7v7H3v-7zm11-11h7v7h-7V3zm0 11h7v7h-7v-7z"/>
              </svg>
            </button>
            <button
              @click="view = 'list'"
              :class="{ 'bg-cyan-600 text-white': view === 'list', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': view !== 'list' }"
              class="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-cyan-50 dark:hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-cyan-500"
              aria-label="List view"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 5h2v2H3V5zm0 4h2v2H3V9zm0 4h2v2H3v-2zm4-8h14v2H7V5zm0 4h14v2H7V9zm0 4h14v2H7v-2z"/>
              </svg>
            </button>
          </div>
        </div>

        {{! Underwater-specific filter buttons }}
        <div class="underwater-filters" x-data="{ activeFilter: 'all' }">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-sm text-gray-600 dark:text-gray-400 mr-2">Filter by environment:</span>
            <button
              @click="activeFilter = 'all'"
              :class="{ 'bg-cyan-600 text-white': activeFilter === 'all', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'all' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-cyan-50 dark:hover:bg-gray-700 transition-colors"
            >
              All
            </button>
            <button
              @click="activeFilter = 'reef'"
              :class="{ 'bg-cyan-600 text-white': activeFilter === 'reef', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'reef' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-cyan-50 dark:hover:bg-gray-700 transition-colors"
            >
              Coral Reef
            </button>
            <button
              @click="activeFilter = 'kelp'"
              :class="{ 'bg-cyan-600 text-white': activeFilter === 'kelp', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'kelp' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-cyan-50 dark:hover:bg-gray-700 transition-colors"
            >
              Kelp Forest
            </button>
            <button
              @click="activeFilter = 'pelagic'"
              :class="{ 'bg-cyan-600 text-white': activeFilter === 'pelagic', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'pelagic' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-cyan-50 dark:hover:bg-gray-700 transition-colors"
            >
              Open Ocean
            </button>
          </div>
        </div>

        {{! Results count }}
        <div class="results-info text-sm text-gray-600 dark:text-gray-400">
          {{#get "posts" filter="tag:hash-portfolio+tag:underwater" as |underwater_posts|}}
            {{underwater_posts.length}} Underwater Images
          {{/get}}
        </div>
      </div>
    </div>
  </section>

  {{! Underwater portfolio grid }}
  <section class="underwater-grid py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      {{! Get underwater posts }}
      {{#get "posts" filter="tag:hash-portfolio+tag:underwater" limit="all" as |underwater_posts|}}
        {{#if underwater_posts}}
          {{> masonry-portfolio posts=underwater_posts}}
        {{else}}
          {{! Empty state }}
          <div class="empty-state text-center py-16">
            <div class="max-w-md mx-auto">
              <div class="w-16 h-16 mx-auto mb-4 bg-cyan-100 dark:bg-cyan-900 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-cyan-600 dark:text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
                No Underwater Images Yet
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-6">
                Underwater photography collection is currently being curated. Check back soon for amazing aquatic adventures!
              </p>
              <a
                href="/portfolio/"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-cyan-600 bg-cyan-100 hover:bg-cyan-200 dark:bg-cyan-900 dark:hover:bg-cyan-800 transition-colors"
              >
                Browse Other Categories
              </a>
            </div>
          </div>
        {{/if}}
      {{/get}}
    </div>
  </section>

  {{! Other portfolio categories }}
  <section class="related-categories bg-white dark:bg-gray-800 py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        Explore Other Collections
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        <a href="/portfolio/wildlife/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Wildlife Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Intimate moments with wild animals in their natural habitats
          </p>
        </a>

        <a href="/portfolio/landscape/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Landscape Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Majestic vistas and serene natural scenes from around the world
          </p>
        </a>

        <a href="/portfolio/cityscape/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Cityscape Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Urban architecture and city life captured through a photographer's lens
          </p>
        </a>
      </div>
    </div>
  </section>
</main>

