{{!< default}}

{{#contentFor "page_class"}}portfolio-landscape-page{{/contentFor}}
{{#contentFor "meta_title"}}{{meta_title default="Landscape Photography Portfolio"}}{{/contentFor}}
{{#contentFor "meta_description"}}{{meta_description default="Explore stunning landscape photography featuring majestic vistas and serene natural scenes from around the world"}}{{/contentFor}}

{{! Landscape portfolio page }}
<main class="portfolio-landscape" role="main">
  {{! Landscape hero section }}
  <section class="landscape-hero bg-gradient-to-br from-blue-900 via-indigo-800 to-purple-900 text-white py-20 lg:py-32 relative overflow-hidden">
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-50"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <div class="flex justify-center mb-6">
          {{! Landscape icon }}
          <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center backdrop-blur-sm">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
          </div>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Landscape Photography
        </h1>

        <p class="max-w-3xl mx-auto text-lg md:text-xl text-blue-100 mb-8">
          Majestic vistas and serene natural scenes captured from the world's most breathtaking locations.
          Experience the grandeur of nature through dramatic lighting and stunning compositions.
        </p>

        {{! Landscape-specific stats }}
        <div class="flex flex-wrap justify-center gap-8 text-sm text-blue-200">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
            </svg>
            <span>Golden Hour Captures</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Remote Locations</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
            <span>Mountain & Coastal</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{! Navigation breadcrumb }}
  <nav class="breadcrumb bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 py-4" aria-label="Breadcrumb">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">Home</a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <a href="/portfolio/" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">Portfolio</a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-900 dark:text-white font-medium">Landscape</span>
        </li>
      </ol>
    </div>
  </nav>

  {{! Landscape collection filter and controls }}
  <section class="controls bg-blue-50 dark:bg-gray-900 py-6">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
        {{! View controls }}
        <div class="view-controls" x-data="{ view: 'grid' }">
          <div class="flex items-center space-x-2">
            <button
              @click="view = 'grid'"
              :class="{ 'bg-blue-600 text-white': view === 'grid', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': view !== 'grid' }"
              class="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500"
              aria-label="Grid view"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 3h7v7H3V3zm0 11h7v7H3v-7zm11-11h7v7h-7V3zm0 11h7v7h-7v-7z"/>
              </svg>
            </button>
            <button
              @click="view = 'list'"
              :class="{ 'bg-blue-600 text-white': view === 'list', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': view !== 'list' }"
              class="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500"
              aria-label="List view"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 5h2v2H3V5zm0 4h2v2H3V9zm0 4h2v2H3v-2zm4-8h14v2H7V5zm0 4h14v2H7V9zm0 4h14v2H7v-2z"/>
              </svg>
            </button>
          </div>
        </div>

        {{! Landscape-specific filter buttons }}
        <div class="landscape-filters" x-data="{ activeFilter: 'all' }">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-sm text-gray-600 dark:text-gray-400 mr-2">Filter by type:</span>
            <button
              @click="activeFilter = 'all'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'all', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'all' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              All
            </button>
            <button
              @click="activeFilter = 'mountains'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'mountains', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'mountains' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              Mountains
            </button>
            <button
              @click="activeFilter = 'coastal'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'coastal', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'coastal' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              Coastal
            </button>
            <button
              @click="activeFilter = 'desert'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'desert', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'desert' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              Desert
            </button>
          </div>
        </div>

        {{! Results count }}
        <div class="results-info text-sm text-gray-600 dark:text-gray-400">
          {{#get "posts" filter="tag:hash-portfolio+tag:landscape" as |landscape_posts|}}
            {{landscape_posts.length}} Landscape Images
          {{/get}}
        </div>
      </div>
    </div>
  </section>

  {{! Landscape portfolio grid }}
  <section class="landscape-grid py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      {{! Get landscape posts }}
      {{#get "posts" filter="tag:hash-portfolio+tag:landscape" limit="all" as |landscape_posts|}}
        {{#if landscape_posts}}
          {{> masonry-portfolio posts=landscape_posts}}
        {{else}}
          {{! Empty state }}
          <div class="empty-state text-center py-16">
            <div class="max-w-md mx-auto">
              <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
                No Landscape Images Yet
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-6">
                Landscape photography collection is currently being curated. Check back soon for breathtaking vistas!
              </p>
              <a
                href="/portfolio/"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-blue-100 hover:bg-blue-200 dark:bg-blue-900 dark:hover:bg-blue-800 transition-colors"
              >
                Browse Other Categories
              </a>
            </div>
          </div>
        {{/if}}
      {{/get}}
    </div>
  </section>

  {{! Other portfolio categories }}
  <section class="related-categories bg-white dark:bg-gray-800 py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        Explore Other Collections
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        <a href="/portfolio/wildlife/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Wildlife Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Intimate moments with wild animals in their natural habitats
          </p>
        </a>

        <a href="/portfolio/underwater/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Underwater Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Aquatic life and underwater ecosystems captured beneath the surface
          </p>
        </a>

        <a href="/portfolio/cityscape/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Cityscape Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Urban architecture and city life captured through a photographer's lens
          </p>
        </a>
      </div>
    </div>
  </section>
</main>

{{! JSON-LD structured data for landscape portfolio }}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Landscape Photography Portfolio",
  "description": "Explore stunning landscape photography featuring majestic vistas and serene natural scenes from around the world",
  "url": "{{@site.url}}/portfolio/landscape/",
  "about": {
    "@type": "Thing",
    "name": "Landscape Photography",
    "description": "Nature photography specializing in capturing natural landscapes and scenic vistas"
  },
  "specialty": "Landscape Photography"
}
</script>
