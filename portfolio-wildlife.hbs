  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Wildlife Photography Portfolio",
  "description": "Explore stunning wildlife photography featuring intimate moments with wild animals in their natural habitats from around the world",
  "url": "{{@site.url}}/portfolio/wildlife/",
  "about": {
    "@type": "Thing",
    "name": "Wildlife Photography",
    "description": "Nature photography specializing in capturing wild animals in their natural environments"
  },
  "specialty": "Wildlife Photography"
