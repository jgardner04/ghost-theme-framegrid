<script>
  document.addEventListener('alpine:init', () => { Alpine.data('upgradePrompt',
  (tier) => ({ requiredTier: tier, triggerUpgrade() { // Trigger Ghost portal
  for subscription upgrade if (window.ghost && window.ghost.portal) {
  window.ghost.portal.open('upgrade'); } else { window.location.hash =
  '#/portal/upgrade'; } } })); });
</script>

<style>
  .member-upgrade-prompt { @apply mt-4; } .upgrade-prompt-card { @apply
  bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-900/20
