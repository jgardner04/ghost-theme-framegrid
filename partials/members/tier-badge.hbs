{{!-- FrameGrid Member Tier Badge Component --}}
{{!-- Usage: {{> members/tier-badge}} --}}
{{!-- Automatically detects member tier and displays appropriate badge --}}

<div x-data="tierBadge()"
     x-init="detectTier()"
     x-show="showBadge"
     class="tier-badge">

  {{!-- Server-side tier detection fallback --}}
  {{#if @member}}
    {{#if @member.subscriptions}}
      {{#foreach @member.subscriptions}}
        {{#if (eq status "active")}}
          {{#if tier}}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                       {{#if (eq tier.name "Premium")}}
                         bg-gradient-to-r from-purple-100 to-pink-100 text-purple-800 dark:from-purple-900/20 dark:to-pink-900/20 dark:text-purple-200
                       {{else if (eq tier.name "Workshop")}}
                         bg-gradient-to-r from-blue-100 to-indigo-100 text-blue-800 dark:from-blue-900/20 dark:to-indigo-900/20 dark:text-blue-200
                       {{else}}
                         bg-gradient-to-r from-green-100 to-emerald-100 text-green-800 dark:from-green-900/20 dark:to-emerald-900/20 dark:text-green-200
                       {{/if}}">
              {{#if (eq tier.name "Premium")}}
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" clip-rule="evenodd"/>
                </svg>
              {{else if (eq tier.name "Workshop")}}
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              {{else}}
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              {{/if}}
              {{tier.name}}
            </span>
          {{else}}
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                         bg-gradient-to-r from-green-100 to-emerald-100 text-green-800 dark:from-green-900/20 dark:to-emerald-900/20 dark:text-green-200">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Member
            </span>
          {{/if}}
        {{/if}}
      {{/foreach}}
    {{else}}
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                   bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-200">
        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
        </svg>
        Free
      </span>
    {{/if}}
  {{/if}}

  {{!-- Client-side tier badge (Alpine.js) --}}
  <span x-show="clientTier"
        x-text="tierLabel"
        :class="tierClasses"
        class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium">
  </span>
</div>

<script>
document.addEventListener('alpine:init', () => {
  Alpine.data('tierBadge', () => ({
    showBadge: false,
    clientTier: null,
    tierLabel: '',
    tierClasses: '',

    init() {
      this.detectTier();
    },

    detectTier() {
      // Get member auth component
      const memberAuth = this.getMemberAuth();

      if (memberAuth && memberAuth.isAuthenticated) {
        this.showBadge = true;
        this.clientTier = memberAuth.memberTier;
        this.setTierDisplay();
      } else {
        this.showBadge = false;
      }
    },

    getMemberAuth() {
      const memberAuthElement = document.querySelector('[x-data*="memberAuth"]');
      return memberAuthElement?.__x?.$data;
    },

    setTierDisplay() {
      switch (this.clientTier) {
        case 'premium':
          this.tierLabel = '‚≠ê Premium';
          this.tierClasses = 'bg-gradient-to-r from-purple-100 to-pink-100 text-purple-800 dark:from-purple-900/20 dark:to-pink-900/20 dark:text-purple-200';
          break;
        case 'workshop':
          this.tierLabel = 'üéì Workshop';
          this.tierClasses = 'bg-gradient-to-r from-blue-100 to-indigo-100 text-blue-800 dark:from-blue-900/20 dark:to-indigo-900/20 dark:text-blue-200';
          break;
        case 'paid':
          this.tierLabel = '‚úì Member';
          this.tierClasses = 'bg-gradient-to-r from-green-100 to-emerald-100 text-green-800 dark:from-green-900/20 dark:to-emerald-900/20 dark:text-green-200';
          break;
        case 'free':
        default:
          this.tierLabel = '‚Ñπ Free';
          this.tierClasses = 'bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-200';
          break;
      }
    }
  }));
});
</script>
