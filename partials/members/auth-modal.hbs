{{! FrameGrid Member Authentication Modal }}
{{! Uses Alpine.js memberAuth component for state management }}
{{! Includes Sign In, Sign Up, and Account management modals }}

<div
  x-data="memberAuth()"
  class="member-auth-modal"
  @keydown.escape.window="closeAllModals()"
>

  {{! Sign In Modal }}
  <div
    x-show="showSignIn"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 z-50 overflow-y-auto"
    aria-labelledby="signin-modal-title"
    role="dialog"
    aria-modal="true"
  >

    {{! Modal Backdrop }}
    <div
      class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
    >
      <div
        class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        @click="closeAllModals()"
        aria-hidden="true"
      ></div>

      {{! Modal Content }}
      <div
        class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
      >

        {{! Modal Header }}
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3
              class="text-lg leading-6 font-medium text-gray-900 dark:text-white"
              id="signin-modal-title"
            >
              Sign In to Your Account
            </h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Access your member content and exclusive photography galleries
            </p>

            {{! Success/Error Messages }}
            <div
              x-show="successMessage"
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 transform translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
              class="mt-3 p-3 bg-green-100 dark:bg-green-900/20 border border-green-300 dark:border-green-600 rounded-md"
            >
              <p
                class="text-sm text-green-700 dark:text-green-400"
                x-text="successMessage"
              ></p>
            </div>

            <div
              x-show="errorMessage"
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 transform translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
              class="mt-3 p-3 bg-red-100 dark:bg-red-900/20 border border-red-300 dark:border-red-600 rounded-md"
            >
              <p
                class="text-sm text-red-700 dark:text-red-400"
                x-text="errorMessage"
              ></p>
            </div>

            {{! Sign In Form }}
            <form @submit.prevent="signIn()" class="mt-6 space-y-4">
              <div>
                <label
                  for="signin-email"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                >
                  Email Address
                </label>
                <input
                  type="email"
                  id="signin-email"
                  x-model="signInForm.email"
                  required
                  autocomplete="email"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-accent-color focus:border-accent-color sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  placeholder="Enter your email"
                />
              </div>

              <div>
                <label
                  for="signin-password"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                >
                  Password
                </label>
                <input
                  type="password"
                  id="signin-password"
                  x-model="signInForm.password"
                  required
                  autocomplete="current-password"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-accent-color focus:border-accent-color sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  placeholder="Enter your password"
                />
              </div>

              {{! Submit Button }}
              <div>
                <button
                  type="submit"
                  :disabled="isLoading"
                  class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent-color hover:bg-accent-color/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-color disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <span x-show="!isLoading">Sign In</span>
                  <span x-show="isLoading" class="flex items-center">
                    <svg
                      class="animate-spin -ml-1 mr-3 h-4 w-4 text-white"
                      fill="none"
                      viewBox="0 0 24 24"
                    >
                      <circle
                        class="opacity-25"
                        cx="12"
                        cy="12"
                        r="10"
                        stroke="currentColor"
                        stroke-width="4"
                      ></circle>
                      <path
                        class="opacity-75"
                        fill="currentColor"
                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                      ></path>
                    </svg>
                    Signing In...
                  </span>
                </button>
              </div>
            </form>

            {{! Form Footer }}
            <div class="mt-6 space-y-3">
              <div class="text-center">
                <button
                  @click="triggerGhostPortal('resetpassword')"
                  class="text-sm text-accent-color hover:text-accent-color/80 font-medium"
                >
                  Forgot your password?
                </button>
              </div>

              <div class="text-center">
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  Don't have an account?
                </span>
                <button
                  @click="openSignUp()"
                  class="ml-1 text-sm text-accent-color hover:text-accent-color/80 font-medium"
                >
                  Sign up here
                </button>
              </div>
            </div>
          </div>
        </div>

        {{! Modal Actions }}
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
          <button
            type="button"
            @click="closeAllModals()"
            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-color sm:mt-0 sm:w-auto sm:text-sm"
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>

  {{! Sign Up Modal }}
  <div
    x-show="showSignUp"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 z-50 overflow-y-auto"
    aria-labelledby="signup-modal-title"
    role="dialog"
    aria-modal="true"
  >

    {{! Modal Backdrop }}
    <div
      class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
    >
      <div
        class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        @click="closeAllModals()"
        aria-hidden="true"
      ></div>

      {{! Modal Content }}
      <div
        class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
      >

        {{! Modal Header }}
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3
              class="text-lg leading-6 font-medium text-gray-900 dark:text-white"
              id="signup-modal-title"
            >
              Create Your Account
            </h3>
            <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
              Join our community and get access to exclusive photography content
            </p>

            {{! Success/Error Messages }}
            <div
              x-show="successMessage"
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 transform translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
              class="mt-3 p-3 bg-green-100 dark:bg-green-900/20 border border-green-300 dark:border-green-600 rounded-md"
            >
              <p
                class="text-sm text-green-700 dark:text-green-400"
                x-text="successMessage"
              ></p>
            </div>

            <div
              x-show="errorMessage"
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 transform translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
              class="mt-3 p-3 bg-red-100 dark:bg-red-900/20 border border-red-300 dark:border-red-600 rounded-md"
            >
              <p
                class="text-sm text-red-700 dark:text-red-400"
                x-text="errorMessage"
              ></p>
            </div>

            {{! Sign Up Form }}
            <form @submit.prevent="signUp()" class="mt-6 space-y-4">
              <div>
                <label
                  for="signup-name"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                >
                  Full Name
                </label>
                <input
                  type="text"
                  id="signup-name"
                  x-model="signUpForm.name"
                  required
                  autocomplete="name"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-accent-color focus:border-accent-color sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  placeholder="Enter your full name"
                />
              </div>

              <div>
                <label
                  for="signup-email"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                >
                  Email Address
                </label>
                <input
                  type="email"
                  id="signup-email"
                  x-model="signUpForm.email"
                  required
                  autocomplete="email"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-accent-color focus:border-accent-color sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  placeholder="Enter your email"
                />
              </div>

              <div>
                <label
                  for="signup-password"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                >
                  Password
                </label>
                <input
                  type="password"
                  id="signup-password"
                  x-model="signUpForm.password"
                  required
                  autocomplete="new-password"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-accent-color focus:border-accent-color sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  placeholder="Choose a strong password"
                />
              </div>

              <div>
                <label
                  for="signup-confirm-password"
                  class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                >
                  Confirm Password
                </label>
                <input
                  type="password"
                  id="signup-confirm-password"
                  x-model="signUpForm.confirmPassword"
                  required
                  autocomplete="new-password"
                  class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-accent-color focus:border-accent-color sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                  placeholder="Confirm your password"
                />
              </div>

              {{! Submit Button }}
              <div>
                <button
                  type="submit"
                  :disabled="isLoading"
                  class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent-color hover:bg-accent-color/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-color disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <span x-show="!isLoading">Create Account</span>
                  <span x-show="isLoading" class="flex items-center">
                    <svg
                      class="animate-spin -ml-1 mr-3 h-4 w-4 text-white"
                      fill="none"
                      viewBox="0 0 24 24"
                    >
                      <circle
                        class="opacity-25"
                        cx="12"
                        cy="12"
                        r="10"
                        stroke="currentColor"
                        stroke-width="4"
                      ></circle>
                      <path
                        class="opacity-75"
                        fill="currentColor"
                        d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                      ></path>
                    </svg>
                    Creating Account...
                  </span>
                </button>
              </div>
            </form>

            {{! Form Footer }}
            <div class="mt-6">
              <div class="text-center">
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  Already have an account?
                </span>
                <button
                  @click="openSignIn()"
                  class="ml-1 text-sm text-accent-color hover:text-accent-color/80 font-medium"
                >
                  Sign in here
                </button>
              </div>
            </div>
          </div>
        </div>

        {{! Modal Actions }}
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
          <button
            type="button"
            @click="closeAllModals()"
            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-color sm:mt-0 sm:w-auto sm:text-sm"
          >
            Cancel
          </button>
        </div>
      </div>
    </div>
  </div>

  {{! Account Modal }}
  <div
    x-show="showAccount && isAuthenticated"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100"
    x-transition:leave-end="opacity-0"
    class="fixed inset-0 z-50 overflow-y-auto"
    aria-labelledby="account-modal-title"
    role="dialog"
    aria-modal="true"
  >

    {{! Modal Backdrop }}
    <div
      class="flex items-center justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
    >
      <div
        class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
        @click="closeAllModals()"
        aria-hidden="true"
      ></div>

      {{! Modal Content }}
      <div
        class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
      >

        {{! Modal Header }}
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3
              class="text-lg leading-6 font-medium text-gray-900 dark:text-white"
              id="account-modal-title"
            >
              Account Settings
            </h3>

            {{! Member Info }}
            <div class="mt-4 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div
                    x-show="memberAvatar"
                    class="h-12 w-12 rounded-full overflow-hidden"
                  >
                    <img
                      :src="memberAvatar"
                      :alt="memberName + ' avatar'"
                      class="h-full w-full object-cover"
                    />
                  </div>
                  <div
                    x-show="!memberAvatar"
                    class="h-12 w-12 bg-accent-color rounded-full flex items-center justify-center"
                  >
                    <span
                      class="text-lg font-medium text-white"
                      x-text="memberName.charAt(0).toUpperCase()"
                    ></span>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p
                    class="text-sm font-medium text-gray-900 dark:text-white"
                    x-text="memberName"
                  ></p>
                  <p
                    class="text-sm text-gray-500 dark:text-gray-400"
                    x-text="memberEmail"
                  ></p>
                  <p
                    class="text-xs text-accent-color font-medium"
                    x-text="memberTier?.toUpperCase() + ' MEMBER'"
                  ></p>
                </div>
              </div>
            </div>

            {{! Account Actions }}
            <div class="mt-6 space-y-3">
              <button
                @click="triggerGhostPortal('account')"
                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-accent-color hover:bg-accent-color/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-color"
              >
                Manage Subscription
              </button>

              <div x-show="isFreeMember" class="text-center">
                <button
                  @click="triggerGhostPortal('upgrade')"
                  class="w-full flex justify-center py-2 px-4 border border-accent-color rounded-md shadow-sm text-sm font-medium text-accent-color hover:bg-accent-color hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-color transition-colors duration-200"
                >
                  Upgrade to Premium
                </button>
              </div>

              <div class="border-t border-gray-200 dark:border-gray-600 pt-3">
                <button
                  @click="signOut()"
                  :disabled="isLoading"
                  class="w-full flex justify-center py-2 px-4 border border-red-300 dark:border-red-600 rounded-md shadow-sm text-sm font-medium text-red-700 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <span x-show="!isLoading">Sign Out</span>
                  <span x-show="isLoading">Signing Out...</span>
                </button>
              </div>
            </div>
          </div>
        </div>

        {{! Modal Actions }}
        <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
          <button
            type="button"
            @click="closeAllModals()"
            class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-700 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent-color sm:mt-0 sm:w-auto sm:text-sm"
          >
            Close
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
