{{! FrameGrid Member Account Settings Modal }}
{{! Comprehensive account management interface }}
{{! Uses Alpine.js for interactive functionality and Ghost member API }}

<div
  x-show="showAccountSettings"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0"
  x-transition:enter-end="opacity-100"
  x-transition:leave="transition ease-in duration-200"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  class="fixed inset-0 z-50 overflow-y-auto"
  aria-labelledby="account-settings-title"
  role="dialog"
  aria-modal="true"
  @keydown.escape.window="closeAccountSettings()"
>

  {{! Modal Backdrop }}
  <div
    class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0"
  >
    <div
      class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"
      @click="closeAccountSettings()"
      aria-hidden="true"
    ></div>

    {{! Modal Content }}
    <div
      class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-2xl sm:w-full"
    >

      {{! Modal Header }}
      <div class="bg-white dark:bg-gray-800 px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">

            {{! Header with Close Button }}
            <div class="flex items-center justify-between mb-6">
              <h3
                class="text-lg leading-6 font-medium text-gray-900 dark:text-white"
                id="account-settings-title"
              >
                Account Settings
              </h3>
              <button
                @click="closeAccountSettings()"
                class="rounded-md text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
              >
                <span class="sr-only">Close</span>
                <svg
                  class="h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"
                  />
                </svg>
              </button>
            </div>

            {{! Success/Error Messages }}
            <div
              x-show="settingsSuccessMessage"
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 transform translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
              class="mb-4 p-3 bg-green-100 dark:bg-green-900/20 border border-green-300 dark:border-green-600 rounded-md"
            >
              <p
                class="text-sm text-green-700 dark:text-green-400"
                x-text="settingsSuccessMessage"
              ></p>
            </div>

            <div
              x-show="settingsErrorMessage"
              x-transition:enter="transition ease-out duration-300"
              x-transition:enter-start="opacity-0 transform translate-y-2"
              x-transition:enter-end="opacity-100 transform translate-y-0"
              class="mb-4 p-3 bg-red-100 dark:bg-red-900/20 border border-red-300 dark:border-red-600 rounded-md"
            >
              <p
                class="text-sm text-red-700 dark:text-red-400"
                x-text="settingsErrorMessage"
              ></p>
            </div>

            {{! Settings Tabs }}
            <div class="border-b border-gray-200 dark:border-gray-600">
              <nav class="-mb-px flex space-x-8" aria-label="Settings tabs">
                <button
                  @click="activeSettingsTab = 'profile'"
                  class="py-2 px-1 border-b-2 font-medium text-sm whitespace-nowrap"
                  :class="{
                    'border-blue-500 text-blue-600 dark:text-blue-400': activeSettingsTab === 'profile',
                    'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300': activeSettingsTab !== 'profile'
                  }"
                >
                  Profile
                </button>
                <button
                  @click="activeSettingsTab = 'subscription'"
                  class="py-2 px-1 border-b-2 font-medium text-sm whitespace-nowrap"
                  :class="{
                    'border-blue-500 text-blue-600 dark:text-blue-400': activeSettingsTab === 'subscription',
                    'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300': activeSettingsTab !== 'subscription'
                  }"
                >
                  Subscription
                </button>
                <button
                  @click="activeSettingsTab = 'preferences'"
                  class="py-2 px-1 border-b-2 font-medium text-sm whitespace-nowrap"
                  :class="{
                    'border-blue-500 text-blue-600 dark:text-blue-400': activeSettingsTab === 'preferences',
                    'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 dark:text-gray-400 dark:hover:text-gray-300': activeSettingsTab !== 'preferences'
                  }"
                >
                  Preferences
                </button>
              </nav>
            </div>

            {{! Tab Content Container }}
            <div class="mt-6 min-h-[400px]">

              {{! Profile Tab }}
              <div x-show="activeSettingsTab === 'profile'" class="space-y-6">

                {{! Profile Information Form }}
                <form @submit.prevent="updateProfile()" class="space-y-4">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                    {{! Name Field }}
                    <div>
                      <label
                        for="settings-name"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                      >
                        Full Name
                      </label>
                      <input
                        type="text"
                        id="settings-name"
                        x-model="profileForm.name"
                        class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                        placeholder="Enter your full name"
                      />
                    </div>

                    {{! Email Field }}
                    <div>
                      <label
                        for="settings-email"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                      >
                        Email Address
                      </label>
                      <input
                        type="email"
                        id="settings-email"
                        x-model="profileForm.email"
                        class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                        placeholder="Enter your email"
                      />
                    </div>
                  </div>

                  {{! Bio/About Field }}
                  <div>
                    <label
                      for="settings-bio"
                      class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                    >
                      About You
                    </label>
                    <textarea
                      id="settings-bio"
                      x-model="profileForm.bio"
                      rows="3"
                      class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                      placeholder="Tell us a bit about yourself and your photography interests..."
                    ></textarea>
                  </div>

                  {{! Profile Update Button }}
                  <div class="flex justify-end">
                    <button
                      type="submit"
                      :disabled="isUpdatingProfile"
                      class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                      <span x-show="!isUpdatingProfile">Update Profile</span>
                      <span
                        x-show="isUpdatingProfile"
                        class="flex items-center"
                      >
                        <svg
                          class="animate-spin -ml-1 mr-3 h-4 w-4 text-white"
                          fill="none"
                          viewBox="0 0 24 24"
                        >
                          <circle
                            class="opacity-25"
                            cx="12"
                            cy="12"
                            r="10"
                            stroke="currentColor"
                            stroke-width="4"
                          ></circle>
                          <path
                            class="opacity-75"
                            fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                          ></path>
                        </svg>
                        Updating...
                      </span>
                    </button>
                  </div>
                </form>

                {{! Change Password Section }}
                <div class="border-t border-gray-200 dark:border-gray-600 pt-6">
                  <h4
                    class="text-lg font-medium text-gray-900 dark:text-white mb-4"
                  >
                    Change Password
                  </h4>

                  <form @submit.prevent="changePassword()" class="space-y-4">
                    <div>
                      <label
                        for="current-password"
                        class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                      >
                        Current Password
                      </label>
                      <input
                        type="password"
                        id="current-password"
                        x-model="passwordForm.currentPassword"
                        class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                        placeholder="Enter current password"
                      />
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <div>
                        <label
                          for="new-password"
                          class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                        >
                          New Password
                        </label>
                        <input
                          type="password"
                          id="new-password"
                          x-model="passwordForm.newPassword"
                          class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                          placeholder="Enter new password"
                        />
                      </div>

                      <div>
                        <label
                          for="confirm-password"
                          class="block text-sm font-medium text-gray-700 dark:text-gray-300"
                        >
                          Confirm New Password
                        </label>
                        <input
                          type="password"
                          id="confirm-password"
                          x-model="passwordForm.confirmPassword"
                          class="mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 dark:placeholder-gray-500 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                          placeholder="Confirm new password"
                        />
                      </div>
                    </div>

                    <div class="flex justify-end">
                      <button
                        type="submit"
                        :disabled="isChangingPassword"
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 disabled:opacity-50 disabled:cursor-not-allowed"
                      >
                        <span x-show="!isChangingPassword">Change Password</span>
                        <span
                          x-show="isChangingPassword"
                          class="flex items-center"
                        >
                          <svg
                            class="animate-spin -ml-1 mr-3 h-4 w-4 text-white"
                            fill="none"
                            viewBox="0 0 24 24"
                          >
                            <circle
                              class="opacity-25"
                              cx="12"
                              cy="12"
                              r="10"
                              stroke="currentColor"
                              stroke-width="4"
                            ></circle>
                            <path
                              class="opacity-75"
                              fill="currentColor"
                              d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                            ></path>
                          </svg>
                          Changing...
                        </span>
                      </button>
                    </div>
                  </form>
                </div>
              </div>

              {{! Subscription Tab }}
              <div
                x-show="activeSettingsTab === 'subscription'"
                class="space-y-6"
              >

                {{! Current Subscription Info }}
                <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
                  <div class="flex items-center justify-between mb-4">
                    <h4
                      class="text-lg font-medium text-gray-900 dark:text-white"
                    >
                      Current Plan
                    </h4>
                    <div
                      class="px-3 py-1 rounded-full text-xs font-medium"
                      :class="{
                        'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400': memberTier === 'premium',
                        'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400': memberTier === 'workshop',
                        'bg-orange-100 text-orange-800 dark:bg-orange-900/20 dark:text-orange-400': memberTier === 'paid',
                        'bg-gray-100 text-gray-800 dark:bg-gray-600 dark:text-gray-300': memberTier === 'free'
                      }"
                      x-text="memberTierDisplayName"
                    ></div>
                  </div>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                    <div>
                      <span
                        class="text-gray-600 dark:text-gray-400"
                      >Plan:</span>
                      <span
                        class="ml-2 font-medium text-gray-900 dark:text-white capitalize"
                        x-text="memberTier"
                      ></span>
                    </div>
                    <div x-show="memberTier !== 'free'">
                      <span
                        class="text-gray-600 dark:text-gray-400"
                      >Status:</span>
                      <span
                        class="ml-2 font-medium text-green-600 dark:text-green-400"
                      >Active</span>
                    </div>
                    <div x-show="memberTier !== 'free'">
                      <span class="text-gray-600 dark:text-gray-400">Next
                        billing:</span>
                      <span
                        class="ml-2 font-medium text-gray-900 dark:text-white"
                        x-text="nextBillingDate"
                      ></span>
                    </div>
                    <div>
                      <span class="text-gray-600 dark:text-gray-400">Member
                        since:</span>
                      <span
                        class="ml-2 font-medium text-gray-900 dark:text-white"
                        x-text="memberSince"
                      ></span>
                    </div>
                  </div>
                </div>

                {{! Available Plans }}
                <div x-show="memberTier === 'free'">
                  <h4
                    class="text-lg font-medium text-gray-900 dark:text-white mb-4"
                  >
                    Upgrade Your Plan
                  </h4>

                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                    {{! Workshop Plan }}
                    <div
                      class="border border-blue-200 dark:border-blue-600 rounded-lg p-6 relative"
                    >
                      <div class="absolute top-4 right-4">
                        <span
                          class="bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400 text-xs font-medium px-2.5 py-0.5 rounded-full"
                        >
                          Popular
                        </span>
                      </div>

                      <h5
                        class="text-lg font-semibold text-gray-900 dark:text-white mb-2"
                      >
                        Workshop Access
                      </h5>
                      <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                        Access to exclusive photography workshops and tutorials
                      </p>

                      <ul
                        class="space-y-2 text-sm text-gray-600 dark:text-gray-400 mb-6"
                      >
                        <li class="flex items-center">
                          <svg
                            class="w-4 h-4 text-blue-500 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            ></path>
                          </svg>
                          Workshop video access
                        </li>
                        <li class="flex items-center">
                          <svg
                            class="w-4 h-4 text-blue-500 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            ></path>
                          </svg>
                          Behind-the-scenes content
                        </li>
                        <li class="flex items-center">
                          <svg
                            class="w-4 h-4 text-blue-500 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            ></path>
                          </svg>
                          Educational resources
                        </li>
                      </ul>

                      <button
                        @click="upgradeToTier('workshop')"
                        class="w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-md hover:bg-blue-700 transition-colors"
                      >
                        Upgrade to Workshop
                      </button>
                    </div>

                    {{! Premium Plan }}
                    <div
                      class="border border-purple-200 dark:border-purple-600 rounded-lg p-6 relative"
                    >
                      <div class="absolute top-4 right-4">
                        <span
                          class="bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400 text-xs font-medium px-2.5 py-0.5 rounded-full"
                        >
                          Best Value
                        </span>
                      </div>

                      <h5
                        class="text-lg font-semibold text-gray-900 dark:text-white mb-2"
                      >
                        Premium Access
                      </h5>
                      <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">
                        Full access to all premium content and features
                      </p>

                      <ul
                        class="space-y-2 text-sm text-gray-600 dark:text-gray-400 mb-6"
                      >
                        <li class="flex items-center">
                          <svg
                            class="w-4 h-4 text-purple-500 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            ></path>
                          </svg>
                          High-resolution downloads
                        </li>
                        <li class="flex items-center">
                          <svg
                            class="w-4 h-4 text-purple-500 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            ></path>
                          </svg>
                          RAW file access
                        </li>
                        <li class="flex items-center">
                          <svg
                            class="w-4 h-4 text-purple-500 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            ></path>
                          </svg>
                          All workshop content
                        </li>
                        <li class="flex items-center">
                          <svg
                            class="w-4 h-4 text-purple-500 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                              clip-rule="evenodd"
                            ></path>
                          </svg>
                          Priority support
                        </li>
                      </ul>

                      <button
                        @click="upgradeToTier('premium')"
                        class="w-full bg-purple-600 text-white font-medium py-2 px-4 rounded-md hover:bg-purple-700 transition-colors"
                      >
                        Upgrade to Premium
                      </button>
                    </div>
                  </div>
                </div>

                {{! Subscription Management (for paid members) }}
                <div
                  x-show="memberTier !== 'free'"
                  class="border-t border-gray-200 dark:border-gray-600 pt-6"
                >
                  <h4
                    class="text-lg font-medium text-gray-900 dark:text-white mb-4"
                  >
                    Manage Subscription
                  </h4>

                  <div class="space-y-3">
                    <button
                      @click="openCustomerPortal()"
                      class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    >
                      <svg
                        class="w-4 h-4 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                        ></path>
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                        ></path>
                      </svg>
                      Manage Billing
                    </button>

                    <button
                      @click="cancelSubscription()"
                      class="inline-flex items-center px-4 py-2 border border-red-300 dark:border-red-600 shadow-sm text-sm font-medium rounded-md text-red-700 dark:text-red-400 bg-white dark:bg-gray-700 hover:bg-red-50 dark:hover:bg-red-900/20 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                    >
                      <svg
                        class="w-4 h-4 mr-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"
                        ></path>
                      </svg>
                      Cancel Subscription
                    </button>
                  </div>
                </div>
              </div>

              {{! Preferences Tab }}
              <div
                x-show="activeSettingsTab === 'preferences'"
                class="space-y-6"
              >

                <form @submit.prevent="updatePreferences()" class="space-y-6">

                  {{! Email Preferences }}
                  <div>
                    <h4
                      class="text-lg font-medium text-gray-900 dark:text-white mb-4"
                    >
                      Email Preferences
                    </h4>

                    <div class="space-y-3">
                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input
                            id="newsletter-updates"
                            x-model="preferencesForm.emailNewsletter"
                            type="checkbox"
                            class="focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700"
                          />
                        </div>
                        <div class="ml-3 text-sm">
                          <label
                            for="newsletter-updates"
                            class="font-medium text-gray-700 dark:text-gray-300"
                          >
                            Newsletter Updates
                          </label>
                          <p class="text-gray-500 dark:text-gray-400">
                            Receive our weekly photography newsletter with new
                            content and tips
                          </p>
                        </div>
                      </div>

                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input
                            id="workshop-notifications"
                            x-model="preferencesForm.emailWorkshops"
                            type="checkbox"
                            class="focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700"
                          />
                        </div>
                        <div class="ml-3 text-sm">
                          <label
                            for="workshop-notifications"
                            class="font-medium text-gray-700 dark:text-gray-300"
                          >
                            Workshop Notifications
                          </label>
                          <p class="text-gray-500 dark:text-gray-400">
                            Get notified about new workshops and photography
                            events
                          </p>
                        </div>
                      </div>

                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input
                            id="new-content-alerts"
                            x-model="preferencesForm.emailNewContent"
                            type="checkbox"
                            class="focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700"
                          />
                        </div>
                        <div class="ml-3 text-sm">
                          <label
                            for="new-content-alerts"
                            class="font-medium text-gray-700 dark:text-gray-300"
                          >
                            New Content Alerts
                          </label>
                          <p class="text-gray-500 dark:text-gray-400">
                            Be the first to know when new galleries are
                            published
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  {{! Privacy Preferences }}
                  <div
                    class="border-t border-gray-200 dark:border-gray-600 pt-6"
                  >
                    <h4
                      class="text-lg font-medium text-gray-900 dark:text-white mb-4"
                    >
                      Privacy & Display
                    </h4>

                    <div class="space-y-3">
                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input
                            id="public-profile"
                            x-model="preferencesForm.publicProfile"
                            type="checkbox"
                            class="focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700"
                          />
                        </div>
                        <div class="ml-3 text-sm">
                          <label
                            for="public-profile"
                            class="font-medium text-gray-700 dark:text-gray-300"
                          >
                            Public Profile
                          </label>
                          <p class="text-gray-500 dark:text-gray-400">
                            Allow others to see your basic profile information
                          </p>
                        </div>
                      </div>

                      <div class="flex items-start">
                        <div class="flex items-center h-5">
                          <input
                            id="activity-tracking"
                            x-model="preferencesForm.activityTracking"
                            type="checkbox"
                            class="focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 dark:border-gray-600 rounded dark:bg-gray-700"
                          />
                        </div>
                        <div class="ml-3 text-sm">
                          <label
                            for="activity-tracking"
                            class="font-medium text-gray-700 dark:text-gray-300"
                          >
                            Activity Tracking
                          </label>
                          <p class="text-gray-500 dark:text-gray-400">
                            Help us improve your experience with anonymous usage
                            analytics
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>

                  {{! Save Preferences Button }}
                  <div class="flex justify-end pt-4">
                    <button
                      type="submit"
                      :disabled="isUpdatingPreferences"
                      class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                      <span x-show="!isUpdatingPreferences">Save Preferences</span>
                      <span
                        x-show="isUpdatingPreferences"
                        class="flex items-center"
                      >
                        <svg
                          class="animate-spin -ml-1 mr-3 h-4 w-4 text-white"
                          fill="none"
                          viewBox="0 0 24 24"
                        >
                          <circle
                            class="opacity-25"
                            cx="12"
                            cy="12"
                            r="10"
                            stroke="currentColor"
                            stroke-width="4"
                          ></circle>
                          <path
                            class="opacity-75"
                            fill="currentColor"
                            d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                          ></path>
                        </svg>
                        Saving...
                      </span>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      {{! Modal Footer with Close Button }}
      <div
        class="bg-gray-50 dark:bg-gray-700 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse"
      >
        <button
          type="button"
          @click="closeAccountSettings()"
          class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 dark:border-gray-600 shadow-sm px-4 py-2 bg-white dark:bg-gray-800 text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:w-auto sm:text-sm"
        >
          Close
        </button>
      </div>
    </div>
  </div>
</div>
