{{! FrameGrid Member Portal Dashboard }}
{{! A comprehensive member dashboard with FrameGrid-specific styling }}
{{! Uses Alpine.js for interactive functionality and Ghost member context }}

<div
  x-data="memberPortal()"
  class="member-portal-dashboard"
  x-show="showPortal"
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0 transform translate-y-4"
  x-transition:enter-end="opacity-100 transform translate-y-0"
>

  {{! Portal Container }}
  <div class="max-w-4xl mx-auto px-4 py-8 space-y-8">

    {{! Welcome Header }}
    <div class="member-portal-header bg-gradient-to-r from-gray-50 to-white dark:from-gray-800 dark:to-gray-700 rounded-xl p-6 shadow-sm border border-gray-200 dark:border-gray-600">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          {{! Member Avatar/Initials }}
          <div class="relative">
            <div
              x-show="memberAvatar"
              class="w-16 h-16 rounded-full overflow-hidden bg-gray-200 dark:bg-gray-600 flex items-center justify-center"
            >
              <img
                :src="memberAvatar"
                :alt="memberName"
                class="w-full h-full object-cover"
                x-show="memberAvatar"
              >
            </div>
            <div
              x-show="!memberAvatar"
              class="w-16 h-16 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white font-bold text-xl"
              x-text="memberInitials"
            ></div>

            {{! Tier Badge }}
            {{#if @member}}
              {{> "members/tier-badge" member=@member class="absolute -top-1 -right-1"}}
            {{/if}}
          </div>

          <div>
            <h1 class="text-2xl font-heading font-bold text-gray-900 dark:text-white">
              Welcome back, <span x-text="memberName || 'Member'"></span>
            </h1>
            <p class="text-gray-600 dark:text-gray-300 mt-1">
              Your photography journey continues
            </p>
          </div>
        </div>

        {{! Quick Actions }}
        <div class="flex items-center space-x-3">
          <button
            @click="refreshMemberData()"
            :disabled="isRefreshing"
            class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
          >
            <svg
              class="w-4 h-4 mr-2"
              :class="{'animate-spin': isRefreshing}"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Refresh
          </button>

          <button
            @click="openAccountSettings()"
            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            Settings
          </button>
        </div>
      </div>
    </div>

    {{! Subscription Status Card }}
    <div class="grid md:grid-cols-2 gap-6">

      {{! Subscription Info }}
      <div class="member-subscription-card bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-600 p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-lg font-heading font-semibold text-gray-900 dark:text-white">
            Subscription Status
          </h2>
          <div
            class="px-3 py-1 rounded-full text-xs font-medium"
            :class="{
              'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400': memberTier !== 'free',
              'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300': memberTier === 'free'
            }"
            x-text="memberTier === 'free' ? 'Free Member' : 'Active Subscription'"
          ></div>
        </div>

        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-gray-600 dark:text-gray-400">Current Plan:</span>
            <span
              class="font-medium text-gray-900 dark:text-white capitalize"
              x-text="memberTier"
            ></span>
          </div>

          <div x-show="memberTier !== 'free'" class="flex justify-between">
            <span class="text-gray-600 dark:text-gray-400">Next Billing:</span>
            <span class="font-medium text-gray-900 dark:text-white" x-text="nextBillingDate"></span>
          </div>

          <div class="flex justify-between">
            <span class="text-gray-600 dark:text-gray-400">Member Since:</span>
            <span class="font-medium text-gray-900 dark:text-white" x-text="memberSince"></span>
          </div>
        </div>

        {{! Upgrade Buttons }}
        <div x-show="memberTier === 'free'" class="mt-6 space-y-2">
          <button
            @click="upgradeToTier('premium')"
            class="w-full bg-gradient-to-r from-purple-600 to-pink-600 text-white font-medium py-2 px-4 rounded-lg hover:from-purple-700 hover:to-pink-700 transition-all duration-200 shadow-sm"
          >
            Upgrade to Premium
          </button>
          <button
            @click="upgradeToTier('workshop')"
            class="w-full bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium py-2 px-4 rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all duration-200 shadow-sm"
          >
            Join Workshops
          </button>
        </div>
      </div>

      {{! Quick Stats }}
      <div class="member-stats-card bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-600 p-6">
        <h2 class="text-lg font-heading font-semibold text-gray-900 dark:text-white mb-4">
          Your Activity
        </h2>

        <div class="grid grid-cols-2 gap-4">
          <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="text-2xl font-bold text-blue-600 dark:text-blue-400" x-text="stats.viewed"></div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Photos Viewed</div>
          </div>

          <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="text-2xl font-bold text-green-600 dark:text-green-400" x-text="stats.collections"></div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Collections</div>
          </div>

          <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="text-2xl font-bold text-purple-600 dark:text-purple-400" x-text="stats.downloads"></div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Downloads</div>
          </div>

          <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
            <div class="text-2xl font-bold text-orange-600 dark:text-orange-400" x-text="stats.workshops"></div>
            <div class="text-sm text-gray-600 dark:text-gray-400">Workshops</div>
          </div>
        </div>
      </div>
    </div>

    {{! Recent Activity & Quick Links }}
    <div class="grid md:grid-cols-3 gap-6">

      {{! Recent Activity }}
      <div class="md:col-span-2 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-600 p-6">
        <h2 class="text-lg font-heading font-semibold text-gray-900 dark:text-white mb-4">
          Recent Activity
        </h2>

        <div class="space-y-3">
          <template x-for="activity in recentActivity" :key="activity.id">
            <div class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
              <div
                class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-medium text-white"
                :class="activity.color"
                x-text="activity.icon"
              ></div>
              <div class="flex-1">
                <p class="text-sm font-medium text-gray-900 dark:text-white" x-text="activity.title"></p>
                <p class="text-xs text-gray-500 dark:text-gray-400" x-text="activity.time"></p>
              </div>
            </div>
          </template>

          <div x-show="recentActivity.length === 0" class="text-center py-8 text-gray-500 dark:text-gray-400">
            <svg class="w-12 h-12 mx-auto mb-4 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p>Start exploring to see your activity here</p>
          </div>
        </div>
      </div>

      {{! Quick Links }}
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-600 p-6">
        <h2 class="text-lg font-heading font-semibold text-gray-900 dark:text-white mb-4">
          Quick Links
        </h2>

        <div class="space-y-3">
          <a
            href="/portfolio/"
            class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors group"
          >
            <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900/20 rounded-lg flex items-center justify-center group-hover:bg-blue-200 dark:group-hover:bg-blue-800/30">
              <svg class="w-4 h-4 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <span class="text-sm font-medium text-gray-900 dark:text-white">Browse Portfolio</span>
          </a>

          <div x-show="hasWorkshopAccess">
            <a
              href="/workshops/"
              class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors group"
            >
              <div class="w-8 h-8 bg-indigo-100 dark:bg-indigo-900/20 rounded-lg flex items-center justify-center group-hover:bg-indigo-200 dark:group-hover:bg-indigo-800/30">
                <svg class="w-4 h-4 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <span class="text-sm font-medium text-gray-900 dark:text-white">My Workshops</span>
            </a>
          </div>

          <div x-show="hasPremiumAccess">
            <a
              href="/premium/"
              class="flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors group"
            >
              <div class="w-8 h-8 bg-purple-100 dark:bg-purple-900/20 rounded-lg flex items-center justify-center group-hover:bg-purple-200 dark:group-hover:bg-purple-800/30">
                <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                </svg>
              </div>
              <span class="text-sm font-medium text-gray-900 dark:text-white">Premium Content</span>
            </a>
          </div>

          <button
            @click="openAccountSettings()"
            class="w-full flex items-center space-x-3 p-3 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors group"
          >
            <div class="w-8 h-8 bg-gray-100 dark:bg-gray-600 rounded-lg flex items-center justify-center group-hover:bg-gray-200 dark:group-hover:bg-gray-500">
              <svg class="w-4 h-4 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <span class="text-sm font-medium text-gray-900 dark:text-white">Account Settings</span>
          </button>
        </div>
      </div>
    </div>

    {{! Portfolio Highlights (Member-only content preview) }}
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-600 p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-lg font-heading font-semibold text-gray-900 dark:text-white">
          Your Exclusive Content
        </h2>
        <a
          href="/portfolio/"
          class="text-sm text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium"
        >
          View All â†’
        </a>
      </div>

      {{! Member exclusive content based on tier }}
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div x-show="memberTier !== 'free'" class="relative overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-700 aspect-[4/3]">
          <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 to-purple-600/20 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-12 h-12 mx-auto mb-2 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="text-sm font-medium text-gray-900 dark:text-white">High-Res Gallery</p>
              <p class="text-xs text-gray-600 dark:text-gray-400">Premium quality images</p>
            </div>
          </div>
        </div>

        <div x-show="hasWorkshopAccess" class="relative overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-700 aspect-[4/3]">
          <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/20 to-blue-600/20 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-12 h-12 mx-auto mb-2 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <p class="text-sm font-medium text-gray-900 dark:text-white">Workshop Videos</p>
              <p class="text-xs text-gray-600 dark:text-gray-400">Behind the scenes content</p>
            </div>
          </div>
        </div>

        <div x-show="memberTier === 'free'" class="relative overflow-hidden rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-600 aspect-[4/3]">
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center">
              <svg class="w-12 h-12 mx-auto mb-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
              </svg>
              <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Upgrade to unlock</p>
              <p class="text-xs text-gray-400">Exclusive member content</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{! Include Account Settings Modal }}
{{> "members/account-settings"}}
