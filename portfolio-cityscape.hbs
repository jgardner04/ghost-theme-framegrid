{{!< default}}

{{#contentFor "page_class"}}portfolio-cityscape-page{{/contentFor}}
{{#contentFor "meta_title"}}{{meta_title default="Cityscape Photography Portfolio"}}{{/contentFor}}
{{#contentFor "meta_description"}}{{meta_description default="Explore stunning cityscape photography featuring urban architecture, city life, and architectural beauty from around the world"}}{{/contentFor}}

{{! Cityscape portfolio page }}
<main class="portfolio-cityscape" role="main">
  {{! Cityscape hero section with category-specific styling }}
  <section class="cityscape-hero bg-gradient-to-br from-slate-900 via-blue-900 to-indigo-900 text-white py-20 lg:py-32 relative overflow-hidden">
    {{! Background pattern }}
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-50"></div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <div class="flex justify-center mb-6">
          {{! Cityscape icon }}
          <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center backdrop-blur-sm">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
          Cityscape Photography
        </h1>

        <p class="max-w-3xl mx-auto text-lg md:text-xl text-blue-100 mb-8">
          Capturing the pulse and rhythm of urban life through architectural beauty and city dynamics. From towering skyscrapers to intimate street scenes,
          discover the artistry hidden within our metropolitan landscapes.
        </p>

        {{! Cityscape-specific stats }}
        <div class="flex flex-wrap justify-center gap-8 text-sm text-blue-200">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            <span>Urban Architecture</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            <span>Golden Hour</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
            <span>Night Photography</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{! Navigation breadcrumb }}
  <nav class="breadcrumb bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 py-4" aria-label="Breadcrumb">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <ol class="flex items-center space-x-2 text-sm">
        <li>
          <a href="/" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">
            Home
          </a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <a href="/portfolio/" class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">
            Portfolio
          </a>
        </li>
        <li class="flex items-center">
          <svg class="w-4 h-4 text-gray-400 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
          <span class="text-gray-900 dark:text-white font-medium">Cityscape</span>
        </li>
      </ol>
    </div>
  </nav>

  {{! Cityscape collection filter and controls }}
  <section class="controls bg-blue-50 dark:bg-gray-900 py-6">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
        {{! View controls }}
        <div class="view-controls" x-data="{ view: 'grid' }">
          <div class="flex items-center space-x-2">
            <button
              @click="view = 'grid'"
              :class="{ 'bg-blue-600 text-white': view === 'grid', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': view !== 'grid' }"
              class="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500"
              aria-label="Grid view"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 3h7v7H3V3zm0 11h7v7H3v-7zm11-11h7v7h-7V3zm0 11h7v7h-7v-7z"/>
              </svg>
            </button>
            <button
              @click="view = 'list'"
              :class="{ 'bg-blue-600 text-white': view === 'list', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': view !== 'list' }"
              class="px-3 py-2 rounded-lg border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors focus:outline-none focus:ring-2 focus:ring-blue-500"
              aria-label="List view"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M3 5h2v2H3V5zm0 4h2v2H3V9zm0 4h2v2H3v-2zm4-8h14v2H7V5zm0 4h14v2H7V9zm0 4h14v2H7v-2z"/>
              </svg>
            </button>
          </div>
        </div>

        {{! Cityscape-specific filter buttons }}
        <div class="cityscape-filters" x-data="{ activeFilter: 'all' }">
          <div class="flex flex-wrap items-center gap-2">
            <span class="text-sm text-gray-600 dark:text-gray-400 mr-2">Filter by style:</span>
            <button
              @click="activeFilter = 'all'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'all', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'all' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              All
            </button>
            <button
              @click="activeFilter = 'skyscrapers'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'skyscrapers', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'skyscrapers' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              Skyscrapers
            </button>
            <button
              @click="activeFilter = 'street'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'street', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'street' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              Street Life
            </button>
            <button
              @click="activeFilter = 'architecture'"
              :class="{ 'bg-blue-600 text-white': activeFilter === 'architecture', 'bg-white text-gray-700 dark:bg-gray-800 dark:text-gray-300': activeFilter !== 'architecture' }"
              class="px-3 py-1 text-sm rounded-md border border-gray-300 dark:border-gray-600 hover:bg-blue-50 dark:hover:bg-gray-700 transition-colors"
            >
              Architecture
            </button>
          </div>
        </div>

        {{! Results count }}
        <div class="results-info text-sm text-gray-600 dark:text-gray-400">
          {{#get "posts" filter="tag:hash-portfolio+tag:cityscape" as |cityscape_posts|}}
            {{cityscape_posts.length}} Cityscape Images
          {{/get}}
        </div>
      </div>
    </div>
  </section>

  {{! Cityscape portfolio grid }}
  <section class="cityscape-grid py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      {{! Get cityscape posts }}
      {{#get "posts" filter="tag:hash-portfolio+tag:cityscape" limit="all" as |cityscape_posts|}}
        {{#if cityscape_posts}}
          {{> masonry-portfolio posts=cityscape_posts}}
        {{else}}
          {{! Empty state }}
          <div class="empty-state text-center py-16">
            <div class="max-w-md mx-auto">
              <div class="w-16 h-16 mx-auto mb-4 bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center">
                <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">
                No Cityscape Images Yet
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-6">
                Urban photography collection is currently being curated. Check back soon for stunning architectural captures!
              </p>
              <a
                href="/portfolio/"
                class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-blue-600 bg-blue-100 hover:bg-blue-200 dark:bg-blue-900 dark:hover:bg-blue-800 transition-colors"
              >
                Browse Other Categories
              </a>
            </div>
          </div>
        {{/if}}
      {{/get}}
    </div>
  </section>

  {{! Cityscape photography tips section }}
  <section class="cityscape-tips bg-blue-50 dark:bg-gray-900 py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
          Urban Photography Insights
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {{! Golden hour tips }}
          <div class="tip-card bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Golden Hour Magic</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              The warm light during golden hour transforms ordinary city streets into cinematic scenes. Buildings glow, shadows become dramatic, and the urban landscape takes on a magical quality.
            </p>
          </div>

          {{! Architecture tips }}
          <div class="tip-card bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Architectural Lines</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Leading lines in urban environments are everywhere. Use streets, building edges, and structural elements to guide the viewer's eye through your composition.
            </p>
          </div>

          {{! Night photography tips }}
          <div class="tip-card bg-white dark:bg-gray-800 rounded-lg p-6 shadow-lg">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Night Cityscapes</h3>
            <p class="text-gray-600 dark:text-gray-300 text-sm">
              Cities come alive at night with artificial lighting creating dramatic contrasts. Experiment with long exposures to capture light trails and the energy of urban nightlife.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  {{! Related categories section }}
  <section class="related-categories bg-white dark:bg-gray-800 py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
        Explore Other Categories
      </h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {{! Wildlife category }}
        <a href="/portfolio/wildlife/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Wildlife Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Intimate moments with wild animals in their natural habitats
          </p>
        </a>

        {{! Landscape category }}
        <a href="/portfolio/landscape/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Landscape Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Majestic vistas and serene natural scenes from around the world
          </p>
        </a>

        {{! Underwater category }}
        <a href="/portfolio/underwater/" class="group block bg-gray-50 dark:bg-gray-700 rounded-lg p-6 hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors">
          <h3 class="font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400">
            Underwater Photography
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-300">
            Aquatic life and underwater ecosystems captured beneath the surface
          </p>
        </a>
      </div>

      <div class="text-center mt-12">
        <a
          href="/portfolio/"
          class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200"
        >
          View All Portfolio Categories
          <svg class="ml-2 -mr-1 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</main>

{{! JSON-LD structured data for cityscape portfolio page }}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "{{meta_title default="Cityscape Photography Portfolio"}}",
  "description": "{{meta_description default="Urban architecture and city life captured through a photographer's lens"}}",
  "url": "{{@site.url}}/portfolio/cityscape/",
  "mainEntity": {
    "@type": "ImageGallery",
    "name": "Cityscape Photography Collection",
    "description": "A curated collection of urban and architectural photography showcasing city life and modern architecture"
  },
  "breadcrumb": {
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "{{@site.url}}"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Portfolio",
        "item": "{{@site.url}}/portfolio/"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "Cityscape Photography",
        "item": "{{@site.url}}/portfolio/cityscape/"
      }
    ]
  }
}
</script>
